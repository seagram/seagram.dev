---
import MainLayout from "./MainLayout.astro";
import Prose from "../components/Prose.astro";
const { frontmatter } = Astro.props;
const displayDate = new Date(frontmatter.pubDate).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
  timeZone: "UTC",
});
---

<MainLayout active="article">
  <article class="mb-24">
    <header class="text-left mb-6">
      <h1 class="text-2xl font-semibold">
        {frontmatter.title}
      </h1>
      <p class="text-xl italic text-zinc-400">
        {displayDate}
      </p>
    </header>
    <Prose>
      <slot />
    </Prose>
  </article>
</MainLayout>
